@model IEnumerable<WebApplication1.Models.BubleTea>

@{
    ViewBag.Title = "Index";
}
<h2>Thực Đơn</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên 
        </th>
        <th>
            Giá
        </th>
        <th>
            Món thêm vào
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           @item.Name
        </td>
        <td>
            @item.Price
        </td>
        <td>
            @item.Topping
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.id }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.id }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
